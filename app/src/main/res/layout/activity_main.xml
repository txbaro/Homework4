<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:background="#AB47BC"
        android:paddingVertical="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mainTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/countriesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/countriesImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/the_countries"
                android:scaleType="centerCrop"
                android:contentDescription="@string/countries_desc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_countries"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/leadersCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/leadersImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/the_leaders"
                android:scaleType="centerCrop"
                android:contentDescription="@string/leaders_desc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_leaders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/museumsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/museumsImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/the_museum"
                android:scaleType="centerCrop"
                android:contentDescription="@string/museums_desc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_museums"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wondersCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/wondersImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/the_wonders"
                android:scaleType="centerCrop"
                android:contentDescription="@string/wonders_desc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seven_wonders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>